<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="WindowAnimationFadeInOut">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="text_1">
        <item name="android:textColor">@color/text_1</item>
        <item name="android:textSize">@dimen/text_1</item>
    </style>

    <style name="text_2">
        <item name="android:textColor">@color/text_2</item>
        <item name="android:textSize">@dimen/text_2</item>
    </style>

    <style name="text_3">
        <item name="android:textColor">@color/text_3</item>
        <item name="android:textSize">@dimen/text_3</item>
    </style>

    <style name="text_title">
        <item name="android:textColor">@color/text_1</item>
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="sep_line_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/division_line_thickening</item>
    </style>

</resources>
