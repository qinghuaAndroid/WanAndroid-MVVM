<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.qh.wanandroid.ui.setting.SettingActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/viewBackground"
        android:fitsSystemWindows="true">

        <include layout="@layout/toolbar" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="58dp"
            android:background="@drawable/ripple_bg"
            style="@style/text_1"
            android:paddingStart="@dimen/padding_left"
            android:gravity="center_vertical"
            android:text="清除缓存"
            android:id="@+id/tvClear"
            android:drawableEnd="@mipmap/arrow_right"
            android:paddingEnd="@dimen/padding_right"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/tvClearValue"
            app:layout_constraintTop_toTopOf="@+id/tvClear"
            app:layout_constraintBottom_toBottomOf="@+id/tvClear"
            app:layout_constraintRight_toRightOf="@+id/tvClear"
            android:gravity="center_vertical"
            android:layout_marginEnd="50dp"
            tools:text="1.23M"
            style="@style/text_2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/ripple_bg"
            style="@style/text_1"
            android:paddingStart="@dimen/padding_left"
            android:gravity="center_vertical"
            android:text="版本"
            android:id="@+id/tvVersion"
            android:drawableEnd="@mipmap/arrow_right"
            android:paddingEnd="@dimen/padding_right"
            app:layout_constraintTop_toBottomOf="@id/tvClear" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/tvVersionValue"
            app:layout_constraintTop_toTopOf="@+id/tvVersion"
            app:layout_constraintBottom_toBottomOf="@+id/tvVersion"
            app:layout_constraintRight_toRightOf="@+id/tvVersion"
            android:gravity="center_vertical"
            android:layout_marginEnd="50dp"
            tools:text="v 0.0.1"
            style="@style/text_2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/ripple_bg"
            android:paddingStart="@dimen/padding_left"
            android:gravity="center_vertical"
            style="@style/text_1"
            android:drawableEnd="@mipmap/arrow_right"
            android:paddingEnd="@dimen/padding_right"
            android:text="主题颜色"
            app:layout_constraintTop_toBottomOf="@+id/tvVersion"
            android:id="@+id/tvColor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="@+id/tvColor"
            app:layout_constraintBottom_toBottomOf="@+id/tvColor"
            app:layout_constraintRight_toRightOf="@+id/tvColor"
            android:gravity="center_vertical"
            android:layout_marginEnd="50dp"
            style="@style/text_2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/ripple_bg"
            android:paddingStart="@dimen/padding_left"
            android:gravity="center_vertical"
            style="@style/text_1"
            android:drawableEnd="@mipmap/arrow_right"
            android:paddingEnd="@dimen/padding_right"
            android:text="夜间模式"
            app:layout_constraintTop_toBottomOf="@+id/tvColor"
            android:id="@+id/tvNight" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="@+id/tvNight"
            app:layout_constraintBottom_toBottomOf="@+id/tvNight"
            app:layout_constraintRight_toRightOf="@+id/tvNight"
            android:gravity="center_vertical"
            android:layout_marginEnd="50dp"
            style="@style/text_2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/tvLogout"
            android:textSize="@dimen/text_1"
            android:textColor="@color/red"
            android:gravity="center"
            android:background="@drawable/ripple_bg"
            android:layout_marginTop="8dp"
            android:text="退出登录"
            app:layout_constraintTop_toBottomOf="@+id/tvNight" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>