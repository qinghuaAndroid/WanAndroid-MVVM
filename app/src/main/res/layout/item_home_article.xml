<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/padding"
    android:paddingLeft="@dimen/padding"
    android:paddingRight="@dimen/padding"
    android:background="@drawable/ripple_bg"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTag"
        style="@style/text_3"
        tools:text="置顶 "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvAuthor"
        style="@style/text_3"
        tools:text="鸿洋"
        app:layout_constraintStart_toEndOf="@id/tvTag"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDate"
        style="@style/text_3"
        tools:text="2020-03-08"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/ivArticlePic"
        android:layout_width="100dp"
        android:layout_height="180dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTag" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:id="@+id/tvTitle"
        style="@style/text_1"
        tools:text="分布式协调工具之zookeeper使用篇-Zookeeper系统核心模型"
        app:layout_constraintStart_toEndOf="@id/ivArticlePic"
        app:layout_constraintTop_toBottomOf="@id/tvTag"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
         android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/ivArticlePic"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintBottom_toTopOf="@id/tvChapterName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:id="@+id/tvChapterName"
        style="@style/text_3"
        tools:text="开发环境"
        app:layout_constraintStart_toEndOf="@id/ivArticlePic"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:layout_constraintBottom_toBottomOf="@id/ivArticlePic" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/ivCollect"
        android:padding="5dp"
        android:src="@mipmap/article_un_collect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tvChapterName" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/division_line"
        android:layout_marginTop="@dimen/padding"
        app:layout_constraintTop_toBottomOf="@id/tvChapterName"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
